KUBELET_ARGS="\
    --hostname-override={{ ansible_hostname }}-{{ ansible_default_ipv4.address }} \
    --bootstrap-kubeconfig=/etc/kubernetes/bootstrap.kubeconfig \
    --kubeconfig=/etc/kubernetes/kubelet.kubeconfig  \
    --config=/etc/kubernetes/kubelet.conf \
    --runtime-cgroups=/system.slice/containerd.service \
    --container-runtime=remote \
    --container-runtime-endpoint=unix://{{containerd.state}}/containerd.sock \
    --image-service-endpoint=unix://{{containerd.state}}/containerd.sock \
    --cert-dir=/etc/kubernetes/pki \
    --root-dir={{ kubernetes.kubelet_dir | default("/var/lib/kubelet") }} \
    --network-plugin=cni \
    --stderrthreshold=3 \
    --registry-burst=10  \
    --log-dir=/var/log/kubernetes \
    --logtostderr=false \
    --kube-api-qps=15 \
    --kube-api-burst=30 \
    --image-pull-progress-deadline=10m \
    #--allow-privileged=true  \
    --anonymous-auth=false \
    --v=2"
